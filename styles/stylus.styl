// out: css/styles.css

bodyWidth = 65%
colorWhite = #dfdfdf

html, body
  font-size 30px
  position absolute
  margin 0
  padding 0
  text-transform uppercase
  width 100%
  height 100%
  overflow: hidden
  background: url('../../assets/background.svg');
  background-size 3048 1714.5
  animation sunset 45s ease infinite

header
 font-size 20px
 text-align center
 line-height 1
 letter-spacing 40px

#content
 text-align left

canvas
  vertical-align top
  margin 0
  padding 0
  height auto
  width auto
  position absolute
  top 0
  left 0
  z-index 1

hr
  width 100%
  padding 0
  margin 5


nav
  font-size 19px
  height auto
  width 100%
  color colorWhite
  display: flex;
  justify-content: center;
  ul
   list-style-type: none;
   margin: 0;
   padding: 0;
   display: flex;
   flex-flow: row wrap;
   list-style-type: none;
   overflow: hidden;
   border-radius: 5px;
   li
    display: inline
    width: auto
    display: block;
    color: white;
    text-align: center;
    text-decoration: none;
    border-bottom: none;
    a
     display: block;
     padding = 15px
     padding-left: padding;
     padding-right padding
     background-color: #dddddd;
     &:link
      color colorWhite
      background rgba(0,0,0,0)
     &:visited
      color colorWhite
     &:active
      color colorWhite
     &:hover
      color colorWhite


#wrapper
  width bodyWidth
  height auto
  margin auto
  margin-top 10px
  color colorWhite
  font-family 'Open Sans', Arial, Helvetica Neue, sans-serif
  font-size 16px
  line-height 1.8
  letter-spacing 4px

@keyframes animStar
  from
    transform: translateY(0px)
  to
    transform: translateY(-2000px)

@keyframes sunset
  0%
    background-position: 20% 50%
  50%
    background-position: 100% 50%
  100%
    background-position: 20% 50%
