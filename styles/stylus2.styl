// out: css/styles2.css

bodyWidth = 65%
colorWhite = #dfdfdf

html, body
  font-size 30px
  position absolute
  margin 0
  padding 0
  //text-align center
  text-transform uppercase
  width 100%
  height auto
  //overflow: hidden
  background: url('../../assets/background.svg');
  background-size 3048 1714.5
  animation sunset 45s ease infinite

  ::-webkit-scrollbar {
      width: 8px;
  }

  ::-webkit-scrollbar-track {
      -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.9);
      border-radius: 8px;
  }

  ::-webkit-scrollbar-thumb {
      border-radius: 10px;
      -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.9);
  }


canvas
  vertical-align top
  margin 0
  padding 0
  height auto
  width auto
  position absolute
  top 0
  left 0
  z-index 1



hr
  width 100%

nav
  font-size 18px
  height auto
  width 100%
  color colorWhite
  padding 10px
  margin 10px
  div
    width 100%
    text-align center
  ul
   list-style-type: none;
   margin: 0;
   padding: 0;
   li
    display: inline
    width: auto
    float left
    a
     display: block;
     padding: 8px;
     background-color: #dddddd;
     &:link
      color colorWhite
      background rgba(0,0,0,0)
     &:visited
      color colorWhite
     &:active
      color colorWhite
     &:hover
      color colorWhite


#wrapper
  width bodyWidth
  //height auto
  margin auto
  margin-top 10px
  color colorWhite
  font-family 'Open Sans', Arial, Helvetica Neue, sans-serif
  font-size 18px
  line-height 1
  letter-spacing 1px



@keyframes animStar
  from
    transform: translateY(0px)
  to
    transform: translateY(-2000px)

@keyframes sunset
  0%
    background-position: 0% 50%
  50%
    background-position: 100% 50%
  100%
    background-position: 0% 50%
