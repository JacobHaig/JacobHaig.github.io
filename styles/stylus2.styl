random(min, max)
  return floor(math(0, 'random') * max - min + 1 + min);


html, body
  font-size 30px
  position absolute
  margin 0
  padding 0
  text-align center
  text-transform uppercase
  width 100%
  height 100%
  overflow: hidden
  background: url('../../assets/background.svg');
  background-size 3048 1714.5
  animation sunset 45s ease infinite

multiple-box-shadow(n)
  color = #FFF
  value1 = random(0,2000)px
  value2 = random(0,2000)px
  value3 = value1 value2 color
  for i in 2 .. n
    value1 = random(0,2000)px
    value2 = random(0,2000)px
    value3 = value3, value1 value2 color
  return value3

shadows-small =  multiple-box-shadow(700)
shadows-medium = multiple-box-shadow(200)
shadows-big =    multiple-box-shadow(100)




#stars
  width: 1px
  height: 1px
  background: transparent
  box-shadow: shadows-small
  animation	: animStar 50s linear infinite
  &:after
    content: " "
    position: absolute
    top: 2000px
    width: 1px
    height: 1px
    background: transparent
    box-shadow: shadows-small

#stars2
  width: 2px
  height: 2px
  background: transparent
  box-shadow: shadows-medium
  animation	: animStar 100s linear infinite
  &:after
    content: " "
    position: absolute
    top: 2000px
    width: 2px
    height: 2px
    background: transparent
    box-shadow: shadows-medium

#stars3
  width: 3px
  height: 3px
  background: transparent
  box-shadow: shadows-big
  animation	: animStar 150s linear infinite
  &:after
    content: " "
    position: absolute
    top: 2000px
    width: 3px
    height: 3px
    background: transparent
    box-shadow: shadows-big

canvas
  vertical-align top
  margin 0
  padding 0
  height auto
  width auto
  position absolute
  top 0
  left 0
  z-index 1

nav
  font-size 18px

#wrapper
  width 65%
  height auto
  margin auto
  margin-top 10px
  color #dfdfdf
  font-family 'Open Sans', Arial, Helvetica Neue, sans-serif
  font-size 16px
  line-height 0.9
  letter-spacing 3px

@keyframes animStar
  from
    transform: translateY(0px)
  to
    transform: translateY(-2000px)

@keyframes sunset
  0%
    background-position: 0% 50%
  50%
    background-position: 100% 50%
  100%
    background-position: 0% 50%
